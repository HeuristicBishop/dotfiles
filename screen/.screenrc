hardstatus off
hardstatus alwayslastline '%{= kg}[ %{kW}%H %{kg}][%= %{kw}%?%-Lw%?%{kR}(%{kw}%n*%f %t%?(%u)%?%{kR})%{kw}%?%+Lw%?%?%= %{kg}][%{ky} %{Y}%Y-%m-%d %c %{kg}]'
defscrollback 10000
altscreen on
vbell off
term screen-256color

# Bindings for dealing with multiple regions
bind j focus down
bind k focus up
bind h focus left
bind l focus right
bind t focus top
bind b focus bottom

# Timeout for escape sequences
maptimeout 5
