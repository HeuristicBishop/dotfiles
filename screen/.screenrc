caption always
caption string '%{gk}[ %{W}%H %{g}][%= %{wk}%?%-Lw%?%{=b kR}(%{w}%n*%f %t%?(%u)%?%{=b kR})%{= kw}%?%+Lw%?%?%= %{g}]%{g}[ %{Y}%Y-%m-%d %c %{g}]'
defscrollback 10000
altscreen on
vbell off
term screen-256color

# Bindings for dealing with multiple regions
bind j focus down
bind k focus up
bind t focus top
bind b focus bottom

# Timeout for escape sequences
maptimeout 5
